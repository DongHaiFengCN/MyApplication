<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md_grey_50"
    tools:context="com.example.admin.myapplication.MainActivity$PlaceholderFragment">
    <LinearLayout
        android:id="@+id/info"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_above="@+id/cart"
        >

        <ListView
            android:id="@+id/left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/md_grey_100"
            android:layout_height="match_parent" />
        >

        <se.emilsjolander.stickylistheaders.StickyListHeadersListView
            android:id="@+id/right"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/md_grey_400"
        />
    <LinearLayout
        android:id="@+id/cart"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:background="@color/md_grey_100"
>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

        <ImageView
            android:id="@+id/cartimage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:padding="2dp"
            android:src="@mipmap/ic_shoppingloder"
            android:layout_marginLeft="16dp"/>

            <TextView
                android:text="5"
                android:textColor="@color/md_white_1000"
                android:gravity="center"
                android:background="@drawable/drawable_design_red_point"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:textSize="12sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_height="match_parent">
            <TextView
                android:text="￥365"
                android:textColor="@color/orange_color"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:id="@+id/textView"
                android:textSize="18sp"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="提交"
                android:textSize="18sp"
                android:textColor="@color/colorText"
                android:background="@color/md_deep_orange_A400"
                android:id="@+id/imageView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
